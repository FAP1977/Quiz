<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorBackground">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="AppTheme.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="android:layout_marginStart">@dimen/card_side_margin</item>
        <item name="android:layout_marginEnd">@dimen/card_side_margin</item>
        <item name="android:layout_marginBottom">@dimen/card_bottom_margin</item>
    </style>

    <style name="TextAppearance.Quiz.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.Quiz.Normal" parent="TextAppearance.MaterialComponents.Body1" />

    <style name="TextAppearance.Quiz.ListItem" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_dark</item>
    </style>

    <style name="TextAppearance.Quiz.Caption" parent="TextAppearance.MaterialComponents.Caption" />

    <style name="TextAppearance.Quiz.Toolbar.Title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textAlignment">center</item>
        <item name="android:color">@android:color/white</item>
    </style>

</resources>
