<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="quiz" type="com.example.quiz.model.Quiz"/>
    </data>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".quizedit.QuizEditFragment">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/question_title"/>
        <EditText
                android:id="@+id/question_edit_text"
                android:text="@={quiz.question}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/answer_title"/>
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/answer_edit_recycler_view"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <Button android:id="@+id/quiz_edit_add_answer_button"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/quiz_edit_add_answer"
                />

    </LinearLayout>
</layout>