<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/nav_graph"
            app:startDestination="@id/quizListFragment">
    <fragment android:id="@+id/quizListFragment" android:name="com.example.quiz.quizlist.QuizListFragment"
              android:label="quiz_list_fragment" tools:layout="@layout/quiz_list_fragment">
        <action android:id="@+id/action_quizListFragment_to_quizEditFragment" app:destination="@id/quizEditFragment"/>
        <action android:id="@+id/action_quizListFragment_to_quizAskPagerFragment"
                app:destination="@id/quizAskPagerFragment" app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim" app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
    </fragment>
    <fragment android:id="@+id/quizEditFragment" android:name="com.example.quiz.quizedit.QuizEditFragment"
              android:label="quiz_edit_fragment" tools:layout="@layout/quiz_edit_fragment">
        <argument android:name="quizId" app:argType="integer" android:defaultValue="0"/>
    </fragment>
    <fragment android:id="@+id/quizAskPagerFragment" android:name="com.example.quiz.quizask.QuizAskPagerFragment"
              android:label="QuizAskPagerFragment" tools:layout="@layout/quiz_ask_pager_fragment">
        <argument android:name="index" app:argType="integer" android:defaultValue="0"/>
        <action android:id="@+id/action_quizAskPagerFragment_to_quizEditFragment"
                app:destination="@id/quizEditFragment"/>
    </fragment>
</navigation>