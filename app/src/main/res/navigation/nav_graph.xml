<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/nav_graph"
            app:startDestination="@id/quizListFragment">
    <fragment android:id="@+id/quizListFragment" android:name="com.example.quiz.quizlist.QuizListFragment"
              android:label="quiz_list_fragment" tools:layout="@layout/quiz_list_fragment">
        <action
            android:id="@+id/action_quizListFragment_to_quizAskPagerFragment"
            app:destination="@id/quizViewPagerFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@+id/quizListFragment" />
    </fragment>
    <fragment
        android:id="@+id/quizViewPagerFragment"
        android:name="com.example.quiz.quizviewpager.QuizViewPagerFragment"
              android:label="QuizAskPagerFragment" tools:layout="@layout/quiz_view_pager_fragment">
        <argument android:name="index" app:argType="integer" android:defaultValue="0"/>
    </fragment>
</navigation>